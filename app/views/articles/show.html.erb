<div class="container col-8" >
    
      
<br>
    <div class="card">
      <h4 class="card-header"><%= @article.title %>
      <% if current_user.admin || current_user.id == @article.user_id %>
        <div style="float:right;">
        <%= link_to 'Edit Article', edit_article_path(@article),:class => "btn btn-success" %>
      </div>
      <% end %>
      
      </h4>
      
      <div class="card-body">
        <p class="card-text"><%= @article.text %>
      </div>
    </div>
    <br>
  <h4 style="color: brown;">Users Comments</h4>
  <br>
  <%= render @article.comments %>

  <h2 style="color: crimson;">Add a comment:</h2>
  <%= render 'comments/form' %>
  <%= link_to 'Back To Articles', articles_path ,:class => "btn btn-info"%>
</div>