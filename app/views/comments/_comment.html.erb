
<div>

  <p>
  <strong><%= comment.commenter %></strong>
  
  <div style="float:right;">

    
  <% if current_user.admin || current_user.id == comment.user_id %>
    <%= link_to 'Edit Comment', edit_article_comment_path(comment.article,comment),:class => "btn btn-success" %>
    <%= link_to 'Delete Comment', [comment.article, comment],
            method: :delete,
            data: { confirm: 'Are you sure you want to Delete This Comment?' },:class => "btn btn-danger" %>
    
  <% end %>

  </div>
  
</p>
 
<p>
  <%= comment.body %>
</p>

</div>
